<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cimage_background"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".AddSubjectActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_300sdp"
            android:background="@drawable/bg_screen_rectangle_round"
            android:orientation="vertical"
            android:paddingTop="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_horizontal"
                android:text="ADD SUBJECT"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/_20sdp" />

            <View
                android:layout_width="70dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="@color/white"
                android:paddingTop="10dp" />


            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:src="@drawable/add_subject_2" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_150"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="@dimen/mdim_70"
            app:cardBackgroundColor="#ffffff"
            app:cardCornerRadius="@dimen/_30sdp"
            app:cardElevation="@dimen/_3sdp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginHorizontal="10dp"
                    android:text="Course"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp"
                    />

                <Spinner
                    android:id="@+id/spnr_course_name"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_square_input_box" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="@dimen/dim_5"
                    android:text="Semester"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp"/>

                <Spinner
                    android:id="@+id/spnr_semester_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim_16"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="@dimen/dim_3"
                    android:background="@drawable/bg_square_input_box" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="@dimen/dim_5"
                    android:text="Subject"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp"/>

                <EditText
                    android:id="@+id/edt_subject_name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/bg_square_input_box"
                    android:hint="Enter Subject Name"
                    android:paddingLeft="10dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_add_subject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/bg_square_send_enq"
                    android:text="ADD"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_15sdp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</RelativeLayout>