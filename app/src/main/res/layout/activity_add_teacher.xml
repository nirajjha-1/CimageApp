<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddTeacherActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cimage_background"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim_120"
                    android:background="@drawable/bg_screen_rectangle_round"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/dim_5">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dim_5"
                        android:gravity="center_horizontal"
                        android:text="ADD TEACHER / FACULTY"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_20sdp" />

                    <View
                        android:layout_width="@dimen/dim_30"
                        android:layout_height="1dp"
                        android:layout_gravity="center"
                        android:background="@color/white" />

                    <ImageView
                        android:layout_width="@dimen/dim_30"
                        android:layout_height="@dimen/dim_30"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dim_8"
                        android:src="@drawable/teacher" />

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dim_1"
                    android:layout_marginTop="@dimen/mdim_60"
                    app:cardBackgroundColor="#ffffff"
                    app:cardCornerRadius="@dimen/dim_10"
                    app:cardElevation="@dimen/dim_3"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingHorizontal="@dimen/dim_1"
                        android:paddingVertical="@dimen/dim_10">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/dim_5"
                            android:text="Teacher/Faculty Name"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_16sdp" />

                        <EditText
                            android:id="@+id/edt_teacher_name"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dim_18"
                            android:layout_marginHorizontal="@dimen/dim_5"
                            android:layout_marginTop="@dimen/dim_3"
                            android:background="@drawable/bg_square_input_box"
                            android:hint="Teacher/Faculty Name"
                            android:inputType="text"
                            android:paddingLeft="@dimen/dim_5" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dim_5"
                            android:layout_marginHorizontal="@dimen/dim_5"
                            android:text="Password"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_16sdp" />

                        <EditText
                            android:id="@+id/edt_password"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="@dimen/dim_3"
                            android:layout_marginHorizontal="@dimen/dim_5"
                            android:background="@drawable/bg_square_input_box"
                            android:hint="Password"
                            android:inputType="numberPassword"
                            android:paddingLeft="@dimen/dim_5" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/dim_5"
                            android:layout_marginHorizontal="@dimen/dim_5"
                            android:gravity="center"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Admin"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_16sdp" />

                            <CheckBox
                                android:id="@+id/is_admin_checkbox"
                                android:layout_width="@dimen/dim_10"
                                android:layout_height="@dimen/dim_10"
                                android:layout_marginHorizontal="@dimen/dim_3"
                                android:gravity="center" />

                        </LinearLayout>

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btn_add_teacher"
                            android:layout_width="@dimen/dim_40"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/dim_8"
                            android:background="@drawable/bg_square_send_enq"
                            android:text="ADD"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_16sdp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

</LinearLayout>